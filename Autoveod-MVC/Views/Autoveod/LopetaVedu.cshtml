@model Autoveod_MVC.Models.Autovedu

@{
    ViewData["Title"] = "Lopeta Vedu";
}

<div>
    <h4>Autovedu</h4>
    <hr />
    <form asp-action="LopetaVedu">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Tellija" class="control-label"></label>
                <input asp-for="Tellija" class="form-control" readonly/>
                <span asp-validation-for="Tellija" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Alguspunkt" class="control-label"></label>
                <input asp-for="Alguspunkt" class="form-control" readonly/>
                <span asp-validation-for="Alguspunkt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lõpppunkt" class="control-label"></label>
                <input asp-for="Lõpppunkt" class="form-control" readonly/>
                <span asp-validation-for="Lõpppunkt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KohalejoudmiseAeg" class="control-label"></label>
                <input type="date" asp-for="KohalejoudmiseAeg" class="form-control" readonly/>
                <span asp-validation-for="KohalejoudmiseAeg" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutoNr" class="control-label"></label>
                <input asp-for="AutoNr" class="form-control" readonly/>
                <span asp-validation-for="AutoNr" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JuhtEesnimi" class="control-label"></label>
                <input asp-for="JuhtEesnimi" class="form-control" readonly/>
                <span asp-validation-for="JuhtEesnimi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="JuhtPerenimi" class="control-label"></label>
                <input asp-for="JuhtPerenimi" class="form-control" readonly/>
                <span asp-validation-for="JuhtPerenimi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Maara valmis" class="btn btn-primary"/>|
                <a asp-action="KoikVeod" class="btn btn-secondary">Tagasi kõikide vedude lehele</a>
            </div>
        </form>
</div>
